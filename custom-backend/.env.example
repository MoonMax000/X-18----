# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=x18_backend
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15
JWT_REFRESH_EXPIRY=30

# Encryption Configuration (for TOTP secrets, etc.)
# Must be exactly 32 characters for AES-256
ENCRYPTION_KEY=change-this-to-32-char-string

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@tyriantrade.com

# AWS S3 Storage Configuration
USE_S3_STORAGE=true
S3_BUCKET=tyriantrade-media
AWS_REGION=us-east-1
CLOUDFRONT_DOMAIN=d1xltpuqw8istm.cloudfront.net

# Base URL for API (used for CORS and media URLs)
BASE_URL=http://localhost:8080

# OAuth Configuration
# Google OAuth - https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback

# Apple OAuth - https://developer.apple.com
APPLE_CLIENT_ID=com.yourcompany.app
APPLE_TEAM_ID=XXXXXXXXXX
APPLE_KEY_ID=XXXXXXXXXX
# Path to Apple private key .p8 file (download from Apple Developer Console)
APPLE_PRIVATE_KEY_PATH=AuthKey_XXXXXXXXXX.p8
APPLE_REDIRECT_URL=http://localhost:8080/api/auth/apple/callback

# Production OAuth URLs:
# GOOGLE_REDIRECT_URL=https://api.tyriantrade.com/api/auth/google/callback
# APPLE_REDIRECT_URL=https://api.tyriantrade.com/api/auth/apple/callback
